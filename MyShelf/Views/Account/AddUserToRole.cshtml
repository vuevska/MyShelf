<div id="content">

    <div id="before-content">
        <h2 id="title">Modify User Roles: </h2>
        <hr />
        @using (Html.BeginForm("AddUserToRole", "Account"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                Role
                @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-default" id="save">Save</button>
        }
    </div>


</div>

