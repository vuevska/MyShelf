@model MyShelf.Models.Author

@{
    ViewBag.Title = "Create";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .navbar {
            position: relative;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: space-between;
            padding-top: 4.5rem;
            padding-bottom: 1.5rem;
            margin-top: -99px;
            /* margin-bottom: -5px;*/
        }
        #content {
            height: 545px; 
            margin-top: 35px;
        }
        .book-link {
            margin-left: 350px; 
            border: 3px solid #d1d0d0; 
            border-radius: 20px; 
            display: inline-block; 
            background-color: #d1d0d0; 
            padding-left: 5px; 
            width: 65px; 
            height: 35px;
        }
        .book-image {
            width: 50px; 
            height: 50px; 
            margin-top: -13px;
        }
        .book-image:hover {
           transform: scale(1.1);
        }
        #before-content {
            width: 33%; 
            display: block; 
            border: 1px solid lightgray; 
            border-radius: 10px; 
            margin: auto;
        }
        .form-horizontal {
            margin-left: 50px; 
            margin-top: 35px;
        }
        #title {
            margin-top: 30px;
            margin-left: 150px;
            font-size: 20px;
        }
        .col-md-2 {
            flex: 0 0 auto;
            width: 16.66666667%;
            font-size: 18px;
        }
        .btn:not(:disabled):not(.disabled) {
            cursor: pointer;
            font-size: 18px;
            margin-left: 90px;
            margin-bottom: 15px;
            border: 1px solid lightgray;
            background-color: lightgray;
        }
        #create:hover {
            color: white;
        }
        .form-group {
            margin-bottom: 1rem;
            margin-left: 55px;
        }
    </style>
</head>

<div id="content">
    <a href="/Authors/Index" class="book-link">
        <img src="~/Images/arrow-left.jpg" class="book-image"/>
    </a>

    <div id="before-content">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2 id="title">Create a New Author</h2>
            <hr />
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" id="create"/>
                    </div>
                </div>
            </div>
        }

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
